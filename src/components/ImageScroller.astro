---
import { Image } from 'astro:assets';

interface ImageDetail {
    alt: string;
    caption: string;
    imageMetaData: ImageMetadata;
}

interface Props {
    imageDetails: ImageDetail[];
}

const { imageDetails } = Astro.props;
---

<div class="w-full pb-4">
    <div class="custom-scrollbar overflow-x-auto whitespace-nowrap pb-6">
        {
            imageDetails.map(({ alt, caption, imageMetaData }, index) => (
                <div class={`inline-block${index !== 0 ? ' pl-12' : ''}`}>
                    <div class="flex flex-col items-center gap-4">
                        <Image
                            class="flex-none pt-12 w-[400px]"
                            alt={alt}
                            src={imageMetaData}
                        />
                        <p class="text-16">{caption}</p>
                    </div>
                </div>
            ))
        }
    </div>
</div>
