---
// A button that toggles the theme between light and dark
---

<button
    class="appearance-none py-2 px-4 bg-primary-50 text-white font-semibold rounded-lg shadow-md hover:bg-primary-90 focus:outline-none focus:ring-2 focus:ring-primary-40 focus:ring-opacity-75"
    id="theme-switcher"
>
    Toggle theme
</button>

<script>
    const button = document.getElementById('theme-switcher');

    if (button) {
        button.addEventListener('click', () => {
            const currentTheme = document.documentElement.classList.contains(
                'dark',
            )
                ? 'dark'
                : 'light';

            if (currentTheme === 'dark') {
                localStorage.setItem('theme', 'light');
                document.documentElement.classList.remove('dark');
            } else {
                localStorage.setItem('theme', 'dark');
                document.documentElement.classList.add('dark');
            }
        });
    }
</script>
